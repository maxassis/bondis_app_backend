generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  UserData  UserData?

  @@map("users")
}

model UserData {
  id        String   @id @default(cuid())
  avatar    String
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [usersId], references: [id])
  usersId   String @unique

  @@map("userData")
}
